@model Teacher
@{
    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<form method="post" asp-asp-controller="Teacher" asp-action="Edit">


    <div class="border  p-3 mt-4">

        <div class="row pb-2">
            <h2 class=" text-primary">Edit Teacher</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class=" mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class=" text-danger"></span>
        </div>
        <button type="submit" class=" btn btn-primary" style="width:150px"> Edit</button>
        <a asp-controller="Teacher" asp-action="Index" class=" btn btn-secondary" style="width:150px">Back To list </a>
    </div>

</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



